<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.productions.rk.tickitock.TheGame">

    <GridLayout
        android:id="@+id/tttGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="#000"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:id="@+id/position0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="#fff"
            android:tag="0" />

        <ImageView
            android:id="@+id/position1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="#fff"
            android:tag="1" />

        <ImageView
            android:id="@+id/position2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="#fff"
            android:tag="2" />

        <ImageView
            android:id="@+id/position3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="#fff"
            android:tag="3" />

        <ImageView
            android:id="@+id/position4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="#fff"
            android:tag="4" />

        <ImageView
            android:id="@+id/position5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="#fff"
            android:tag="5" />

        <ImageView
            android:id="@+id/position6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="#fff"
            android:tag="6" />

        <ImageView
            android:id="@+id/position7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="#fff"
            android:tag="7" />

        <ImageView
            android:id="@+id/position8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="#fff"
            android:tag="8" />

    </GridLayout>

</FrameLayout>
